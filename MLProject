name: chicago_crime_prediction

conda_env: conda.yaml

# Prétraitement des données
preprocess:
  entry_points:
    - preprocess.py
  parameters:
    data_dir: "data"

# Entraînement du modèle
train:
  entry_points:
    - train.py
  parameters:
    preprocess_output: {artifact: preprocess_output}
    model_output: {artifact: model_output}

# Visualisation des résultats
visualize:
  entry_points:
    - visualize.py
  parameters:
    model_output: {artifact: model_output}
    visualize_output: {artifact: visualize_output}

# Évaluation du modèle
evaluate:
  entry_points:
    - evaluate.py
  parameters:
    model_output: {artifact: model_output}
    evaluate_output: {artifact: evaluate_output}
